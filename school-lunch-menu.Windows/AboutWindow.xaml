<Window x:Class="SchoolLunchMenu.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About School Lunch Menu"
        Icon="Assets/logo.ico"
        Width="420" Height="460"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- App icon -->
        <Image Grid.Row="0" Source="Assets/logo.ico" Width="64" Height="64"
               HorizontalAlignment="Center" Margin="0,0,0,12" />

        <!-- App name -->
        <TextBlock Grid.Row="1" Text="School Lunch Menu" FontSize="20" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,4" />

        <!-- Version -->
        <TextBlock Grid.Row="2" x:Name="VersionText" FontSize="13" Foreground="#6c757d"
                   HorizontalAlignment="Center" Margin="0,0,0,4" />

        <!-- Git info -->
        <TextBlock Grid.Row="3" x:Name="GitInfoText" FontSize="11" Foreground="#6c757d"
                   FontFamily="Consolas" HorizontalAlignment="Center" Margin="0,0,0,12" />

        <Separator Grid.Row="4" Margin="0,0,0,12" />

        <!-- Credits -->
        <StackPanel Grid.Row="5" HorizontalAlignment="Center" Margin="0,0,0,12">
            <TextBlock Text="Credits" FontWeight="SemiBold" FontSize="13"
                       HorizontalAlignment="Center" Margin="0,0,0,8" />

            <TextBlock FontSize="11" Margin="0,2" HorizontalAlignment="Center">
                <Run Text="Menu data from " />
                <Hyperlink NavigateUri="https://linqconnect.com" RequestNavigate="OnHyperlinkNavigate">LINQ Connect</Hyperlink>
            </TextBlock>

            <TextBlock FontSize="11" Margin="0,2" HorizontalAlignment="Center">
                <Run Text="Day labels from " />
                <Hyperlink NavigateUri="https://cms.isd194.org/news-and-events/calendar" RequestNavigate="OnHyperlinkNavigate">ISD 194 CMS Calendar</Hyperlink>
            </TextBlock>

            <TextBlock FontSize="11" Margin="0,2" HorizontalAlignment="Center">
                <Hyperlink NavigateUri="https://github.com/astoltz/school-lunch-menu" RequestNavigate="OnHyperlinkNavigate">GitHub Project Page</Hyperlink>
            </TextBlock>

            <TextBlock FontSize="11" Foreground="#6c757d" Margin="0,8,0,0"
                       HorizontalAlignment="Center" Text="Licensed under the MIT License" />

            <TextBlock FontSize="11" Foreground="#6c757d" Margin="0,4,0,0"
                       HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"
                       Text="Generate printable school lunch calendars with allergen filtering and favorites." />
        </StackPanel>

        <!-- Copyright -->
        <TextBlock Grid.Row="6" FontSize="10" Foreground="#adb5bd"
                   HorizontalAlignment="Center" VerticalAlignment="Bottom"
                   Text="&#169; 2024-2026 astoltz" />

        <!-- OK button -->
        <Button Grid.Row="7" Content="OK" IsDefault="True" IsCancel="True"
                Padding="24,6" HorizontalAlignment="Center" Margin="0,12,0,0"
                Click="OnOkClick" />
    </Grid>
</Window>
